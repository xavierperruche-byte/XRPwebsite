<script>
  // Gestion des accordéons
  function initAccordions() {
    const accordionHeaders = document.querySelectorAll('.accordion-header');
    
    accordionHeaders.forEach(header => {
      header.addEventListener('click', () => {
        const accordionBox = header.closest('.accordion-box');
        const contentId = header.getAttribute('data-accordion');
        const content = document.getElementById(contentId);
        
        // Toggle active state
        const isActive = accordionBox.classList.contains('active');
        
        if (isActive) {
          // Fermer l'accordéon
          accordionBox.classList.remove('active');
        } else {
          // Ouvrir l'accordéon
          accordionBox.classList.add('active');
        }
      });
    });
  }

  // Scroll effect pour la subnav
  function initSubnavScroll() {
    const subnav = document.getElementById('floatingSubnav');
    
    if (!subnav) return;

    window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      if (scrollTop > 100) {
        subnav.classList.add('scrolled');
      } else {
        subnav.classList.remove('scrolled');
      }
    });
  }

  // Scroll animations pour le contenu
  function initScrollAnimations() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    const animateElements = document.querySelectorAll('.fade-in-down');
    animateElements.forEach(el => observer.observe(el));
  }

  // Initialiser au chargement
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initAccordions();
      initSubnavScroll();
      initScrollAnimations();
    });
  } else {
    initAccordions();
    initSubnavScroll();
    initScrollAnimations();
  }

  // Support pour les transitions de page Astro
  document.addEventListener('astro:page-load', () => {
    initAccordions();
    initSubnavScroll();
    initScrollAnimations();
  });
</script>