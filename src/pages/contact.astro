<!-- Load reCAPTCHA v3 -->
<script src={`https://www.google.com/recaptcha/api.js?render=${RECAPTCHA_SITE_KEY}`}></script>

  <script define:vars={{ RECAPTCHA_SITE_KEY }}>
    const form = document.getElementById('contactForm');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');
    const submitBtn = document.getElementById('submitBtn');

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Disable submit button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Sending...';
        
        try {
          // Get reCAPTCHA token
          const token = await grecaptcha.execute(RECAPTCHA_SITE_KEY, { action: 'contact_form' });
          
          // Add token to form data
          const formData = new FormData(form);
          formData.append('recaptcha_token', token);
          
          const response = await fetch(form.action, {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          const result = await response.json();

          if (response.ok && result.success) {
            successMessage.style.display = 'block';
            errorMessage.style.display = 'none';
            form.reset();
            
            setTimeout(() => {
              successMessage.style.display = 'none';
            }, 5000);
          } else {
            throw new Error(result.error || 'Form submission failed');
          }
        } catch (error) {
          errorMessage.textContent = '✗ ' + (error.message || 'Something went wrong. Please try again.');
          errorMessage.style.display = 'block';
          successMessage.style.display = 'none';
          
          setTimeout(() => {
            errorMessage.style.display = 'none';
          }, 5000);
        } finally {
          // Re-enable submit button
          submitBtn.disabled = false;
          submitBtn.textContent = 'Send Message';
        }
      });
    }

    // Liste des URLs des images pour le carrousel
      /**
      * Change l'image de fond du conteneur.
      */

    // Slider functionality
    let currentSlide = 0;
    const slides = document.querySelectorAll('.slide');
    const indicators = document.querySelectorAll('.indicator');
    const totalSlides = slides.length;
  let autoSlideInterval = null;

  function showSlide(index) {
      slides.forEach(slide => slide.classList.remove('active'));
      indicators.forEach(indicator => indicator.classList.remove('active'));
      
      slides[index].classList.add('active');
      indicators[index].classList.add('active');
      currentSlide = index;
    }

    function nextSlide() {
      const next = (currentSlide + 1) % totalSlides;
      showSlide(next);
    }

    function prevSlide() {
      const prev = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(prev);
    }

    function startAutoSlide() {
      // Clear any existing interval
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
        autoSlideInterval = null;
      }
      // Start new interval
      autoSlideInterval = setInterval(nextSlide, 5000);
    }

    function stopAutoSlide() {
      if (autoSlideInterval) {
        clearInterval(autoSlideInterval);
        autoSlideInterval = null;
      }
    }

    // Navigation buttons - restart timer after interaction
    document.querySelector('.slider-nav.next')?.addEventListener('click', () => {
      nextSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    document.querySelector('.slider-nav.prev')?.addEventListener('click', () => {
      prevSlide();
      stopAutoSlide();
      startAutoSlide();
    });

    // Indicators - restart timer after interaction
    indicators.forEach((indicator, index) => {
      indicator.addEventListener('click', () => {
        showSlide(index);
        stopAutoSlide();
        startAutoSlide();
      });
    });

    // Start auto-advance slides
    startAutoSlide();

    // Keyboard navigation - restart timer after interaction
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') {
        prevSlide();
        stopAutoSlide();
        startAutoSlide();
      }
      if (e.key === 'ArrowRight') {
        nextSlide();
        stopAutoSlide();
        startAutoSlide();
      }
    });
  </script>

<style>
    html, body {
      height: 100%; /* Use 100% for body/html */
      min-height: 100vh; /* Use min-height to ensure it respects content longer than viewport */
      margin: 0;
      padding: 0;
    }

    .slider-container {
      position: relative;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      min-height: 1000px; /* Keep full height */
    }

    .slide {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      min-height: 1000px; /* Keep full height */
      opacity: 0;
      visibility: hidden;
      transition: opacity 0.8s ease-in-out, visibility 0.8s ease-in-out;
    }

    .slide.active {
      opacity: 1;
      visibility: visible;
      z-index: 10;
    }

    .slide-background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
        overflow: hidden; /* Add this to clip the scaled image */

    }

    .slide-image {
      width: 100%;
      height: 100%;
      object-fit: cover;
      animation: kenburns 20s ease-out infinite;
      opacity: 0.55;
    }

    @keyframes kenburns {
      0%, 100% {
        transform: scale(1.05);
      }
      50% {
        transform: scale(1.15);
      }
    }

    .slide-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        to right,
        rgba(0, 0, 0, 0.7) 0%,
        rgba(0, 0, 0, 0.4) 50%,
        rgba(0, 0, 0, 0.2) 100%
      );
    }


    .slide-background::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(255, 255, 255, 0.15);
      z-index: 1;
    }

    .slide-content {
      position: relative;
      height: 100%;
      display: flex;
      align-items: center;
      padding: 0 2rem;
      max-width: 2000px;
      margin: 0 auto;
      z-index: 10;
    }

    .slide-info {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      z-index: 20; /* Ensure it sits above the background and overlay */
      max-width: 2000px;
      justify-content: center; 
      align-items: center;   
      flex-direction: column; 
      text-align: center;
      padding: 1px; /* Add some padding so the content doesn't touch the edge */

      color: rgba(255, 255, 255, 0);
      animation: slideIn 0.8s ease-out;
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-50px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .slide.active .slide-info {
      animation: slideIn 0.8s ease-out;
    }

    /* Slider Indicators */
    .slider-indicators {
      position: absolute;
      bottom: 3rem;
      left: 50%;
      transform: translateX(-50%);
      display: flex;
      gap: 1rem;
      z-index: 10;
    }

    .indicator {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      background: rgba(255, 255, 255, 0);
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .indicator.active {
      background: rgba(255, 255, 255, 0);
      width: 40px;
      border-radius: 6px;
    }


    .contact-container {
      position: absolute;
      top: 50px;
      left: 0;
      width: 100%;
      height: 100%;
