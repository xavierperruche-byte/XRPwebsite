  .service-card h3 {
    font-size: 1.1rem;
  }

  .service-icon {
    font-size: 2.5rem;
  }
}

/* 1 column - Small screens */
@media (max-width: 768px) {
  .services-grid {
    grid-template-columns: 1fr;
  }

  .service-card {
    padding: 1.5rem;
  }

  .service-card p {
    font-size: 0.95rem;
  }
}

@media (max-width: 480px) {
  .services-grid {
    gap: 1rem;
  }

  .service-card {
    padding: 1rem;
  }

  .service-card h3 {
    font-size: 1rem;
  }

  .service-icon {
    font-size: 2rem;
  }
}
</style>
</Layout>
