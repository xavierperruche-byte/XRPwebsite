---
import 'swiper/css';
import 'swiper/css/pagination';
import 'swiper/css/navigation';
import { register } from 'swiper/element/bundle';
import '../styles/global.css';

// Enregistre Swiper Element côté serveur si nécessaire
if (typeof window === 'undefined') {
  register();
}
---

<section class="full-width-carousel">
  <button class="custom-prev" aria-label="Previous slide">‹</button>
  <button class="custom-next" aria-label="Next slide">›</button>
  
  <swiper-container
    class="mySwiper"
    loop="true"
    pagination="true"
    pagination-clickable="true"
    navigation="false"
    slides-per-view="4"
    space-between="20"
  >
    <swiper-slide>
      <div class="slide-content" data-image="/images/NOWHERE.webp">
        <img src="/images/NOWHERE.webp" alt="NOWHERE SOCIETY" loading="lazy" /> 
        <div class="slide-text">
          <h2>WELL BEING | OLFACTIVE</h2>
          <p>NOWHERE SOCIETY</p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/Sleep.webp">
        <img src="/images/Sleep.webp" alt="Sleep Atelier with Studiolfactif" loading="lazy" /> 
        <div class="slide-text">
          <h2>WELL BEING | OLFACTIVE</h2>
          <p>Sleep Atelier with Studiolfactif</p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/shilliger.webp">
        <img src="/images/shilliger.webp" alt="Shilliger with Studiolfactif" loading="lazy" /> 
        <div class="slide-text">
          <h2>WELL BEING | OLFACTIVE</h2>
          <p>Shilliger with Studiolfactif</p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/bucherer1.webp">
        <img src="/images/bucherer1.webp" alt="Bucherer" loading="lazy" /> 
        <div class="slide-text">
          <h2>WELL BEING | OLFACTIVE</h2>
          <p>Bucherer</p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/fashion.webp">
        <img src="/images/fashion.webp" alt="fashion" loading="lazy" /> 
        <div class="slide-text">
          <h2>FASHION</h2>
          <p> </p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/bucherer2.webp">
        <img src="/images/bucherer2.webp" alt="Bucherer" loading="lazy" /> 
        <div class="slide-text">
          <h2>ART BRANDING CREATIVE DESIGN</h2>
          <p>Bucherer drawing</p>
        </div>
      </div>
    </swiper-slide>
    <swiper-slide>
      <div class="slide-content" data-image="/images/artsq.webp">
        <img src="/images/artsq.webp" alt="ArtSquare" loading="lazy" /> 
        <div class="slide-text">
          <h2>ART BRANDING CREATIVE DESIGN</h2>
          <p>ArtSquare</p>
        </div>
      </div>
    </swiper-slide>
  </swiper-container>

  <!-- Overlay pour afficher l'image en grand -->
  <div class="image-overlay" id="imageOverlay">
    <button class="close-overlay" id="closeOverlay">&times;</button>
    <img src="" alt="Image agrandie" id="overlayImage" />
  </div>

</section>


<style>
  .full-width-carousel {
    width: 85%;
    height: 95vh;
    position: relative;
    padding: 0 60px;
    overflow: visible;
  }

  /* Boutons de navigation personnalisés */
  .custom-prev,
  .custom-next {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0);
    border: none;
    color: blqck;
    font-size: 3rem;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 100;
    transition: background 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-prev:hover,
  .custom-next:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  .custom-prev {
    left: -60px;
  }

  .custom-next {
    right: -60px;
  }


 .mySwiper {
    width: 100%;
    height: 100%;
    overflow: visible !important;
  }

  swiper-container {
    overflow: visible !important;
  }

  swiper-slide {
    justify-content: center;
    align-items: center;
    overflow: visible !important;
  }

  .slide-wrapper {
    flex-direction: column;
    width: 100%;
    max-width: 300px;
  }

  .slide-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: transform 0.3s ease;
  }


  .slide-content:hover {
    transform: scale(0.98);
  }

  /* Overlay pour l'image agrandie */
  .image-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    justify-content: center;
    align-items: center;
  }

  .image-overlay.active {
    display: flex;
  }

  .image-overlay img {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    border-radius: 10px;
  }

  .close-overlay {
    position: absolute;
    top: 20px;
    right: 40px;
    background: none;
    border: none;
    color: white;
    font-size: 4rem;
    cursor: pointer;
    z-index: 1001;
    transition: transform 0.2s;
  }

  .close-overlay:hover {
    transform: scale(1.2);
  }


  .slide-content img {
    width: auto;
    height: 70vh;
    max-width: 100%;
    object-fit: cover;
     border-radius: 20px;
  }

  .slide-text {
    text-align: center;
    color: black;
    padding: 5rem 0;
    border-radius: 0 0 20px 20px;
  }

  .slide-text h2 {
    font-size: 1.2rem;
    margin: 0;
    font-weight: 600;
  }

  .slide-text p {
    font-size: 1rem;
    margin: 0.5rem 0 0 0;
  }

  /* Personnalisation des flèches de navigation - cachées car on utilise des boutons custom */
  .mySwiper::part(button-prev),
  .mySwiper::part(button-next) {
    display: none;
  }


  /* Personnalisation des points de pagination */
  .mySwiper::part(bullet) {
    background-color: black;
    opacity: 0.5;
  }

  .mySwiper::part(bullet-active) {
    background-color: black;
    opacity: 1;
  }

  /* Pagination positionnée en dessous du carousel */
   .mySwiper::part(pagination) {
    bottom: 0vh;
  }


  /* Responsive */
 @media (max-width: 1250px) {
     .full-width-carousel {
      width: 85%;
      height: auto;
      min-height: 60vh;
    }
    .slide-content img {
      height: 60vh;
    }
   
    .slide-text h2 {
      font-size: 1rem;
    }
    
    .slide-text p {
      font-size: 0.9rem;
    }


   .mySwiper::part(pagination) {
    bottom: 10vh;
  }
     .custom-prev {
      left: -50px;
    }

    .custom-next {
      right: -50px;
    }

    .custom-prev,
    .custom-next {
      top: 35%;
      width: 45px;
      height: 45px;
      font-size: 2.5rem;
    }
  }


  @media (max-width: 1024px) {
     .full-width-carousel {
      width: 85%;
      height: auto;
      min-height: 60vh;
    }
    .slide-content img {
      height: 60vh;
    }
   
    .slide-text h2 {
      font-size: 1rem;
    }
    
    .slide-text p {
      font-size: 0.9rem;
    }


  .mySwiper::part(pagination) {
    bottom: 10vh;
  }
    .custom-prev {
      left: -50px;
    }

    .custom-next {
      right: -50px;
    }

    .custom-prev,
    .custom-next {
      top: 35%;
      width: 45px;
      height: 45px;
      font-size: 2.5rem;
    }
  }

  @media (max-width: 640px) {
    .full-width-carousel {
      width: 85%;
      height: auto;
      min-height: 60vh;
    }
    

    .slide-content img {
      height: 60vh;
    }
    
    .slide-text h2 {
      font-size: 0.8rem;
    }
    
    .slide-text p {
      font-size: 0.75rem;
    }

    .slide-text {
      padding: 0.5rem;
    }
   .custom-prev {
      left: -50px;
    }

    .custom-next {
      right: -50px;
    }

    .custom-prev,
    .custom-next {
      top: 35%;
      width: 45px;
      height: 45px;
      font-size: 2.5rem;
    }
     
  .mySwiper::part(pagination) {
    bottom: 25vh;
  }

  }

</style>

<script>
  import { register } from 'swiper/element/bundle';
  
  // Enregistre Swiper Element côté client
  register();

  // Configuration responsive via JavaScript après initialisation
  document.addEventListener('DOMContentLoaded', () => {
    const swiperEl = document.querySelector('.mySwiper');
    const prevBtn = document.querySelector('.custom-prev');
    const nextBtn = document.querySelector('.custom-next');
    const overlay = document.getElementById('imageOverlay');
    const overlayImage = document.getElementById('overlayImage');
    const closeBtn = document.getElementById('closeOverlay');
    
    if (swiperEl) {
      // Gestion des boutons de navigation personnalisés
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          swiperEl.swiper.slidePrev();
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          swiperEl.swiper.slideNext();
        });
      }

     // Gestion du clic sur les images pour l'overlay
      const slideContents = document.querySelectorAll('.slide-content');
      slideContents.forEach(content => {
        content.addEventListener('click', () => {
          const imageSrc = content.getAttribute('data-image');
          if (imageSrc && overlay && overlayImage) {
            overlayImage.src = imageSrc;
            overlay.classList.add('active');
          }
        });
      });

      // Fermer l'overlay
      if (closeBtn && overlay) {
        closeBtn.addEventListener('click', () => {
          overlay.classList.remove('active');
        });
        
        // Fermer en cliquant sur le fond
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) {
            overlay.classList.remove('active');
          }
        });
      }

      // Fermer avec la touche Echap
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && overlay) {
          overlay.classList.remove('active');
        }
      });


      const updateSlidesPerView = () => {
        const width = window.innerWidth;
        
        if (width < 640) {
          swiperEl.setAttribute('slides-per-view', '1');
          swiperEl.setAttribute('space-between', '10');
        } else if (width < 1024) {
          swiperEl.setAttribute('slides-per-view', '2');
          swiperEl.setAttribute('space-between', '15');
        } else if (width < 1280) {
          swiperEl.setAttribute('slides-per-view', '3');
          swiperEl.setAttribute('space-between', '20');
        } else {
          swiperEl.setAttribute('slides-per-view', '4');
          swiperEl.setAttribute('space-between', '20');
        }
      };
      
      updateSlidesPerView();
      window.addEventListener('resize', updateSlidesPerView);
    }
  });

</script>