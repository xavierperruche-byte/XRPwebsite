<style>
  .full-width-carousel {
    width: 80%;
    height: 95%;
    position: relative;
    padding: 0 60px;
    overflow: visible;
  }

  /* Timeline container et ligne */
  .timeline-container {
    position: absolute;
    top: calc(70vh + 20px);
    left: 60px;
    right: 60px;
    height: 2px;
    z-index: 50;
    pointer-events: none;
  }

  .timeline-line {
    width: 100%;
    height: 2px;
    background: linear-gradient(to right, 
      transparent 0%, 
      black 10%, 
      black 90%, 
      transparent 100%);
  }

  /* Marker de timeline pour chaque slide */
  .timeline-marker {
    position: relative;
    width: 100%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 10px 0;
  }

  .timeline-icon {
    width: 40px;
    height: 40px;
    background:black;
    border: 2px solid white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
    position: relative;
    z-index: 60;
    transition: all 0.3s ease;
  }


  /* Boutons de navigation personnalisés */
  .custom-prev,
  .custom-next {
    position: absolute;
    top: 40%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0);
    border: none;
    color: black;
    font-size: 3rem;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    z-index: 100;
    transition: background 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .custom-prev:hover,
  .custom-next:hover {
    background: rgba(255, 255, 255, 0.4);
  }

  .custom-prev {
    left: -60px;
  }

  .custom-next {
    right: -60px;
  }

  .mySwiper {
    width: 100%;
    height: 100%;
    overflow: visible !important;
  }

  swiper-container {
    overflow: visible !important;
  }

  swiper-slide {
    justify-content: center;
    align-items: center;
    overflow: visible !important;
  }

  .slide-wrapper {
    flex-direction: column;
    width: 100%;
    max-width: 300px;
  }

  .slide-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: auto;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

/* supprime le transform global et n'anime que l'image / la vidéo */
.slide-content { /* garder transition si besoin mais sans transform */ 
  transition: none;
}

/* anime seulement l'image ou la video à l'intérieur du slide */
.slide-content:hover img,
.slide-content:hover .video-container video {
  transform: scale(0.98);
  transition: transform 0.3s ease;
  will-change: transform;
}


  /* Styles pour le conteneur vidéo */
  .video-container {
    position: relative;
    width: 100%;
    height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20px;
    overflow: hidden;
    background: transparent;
  }

  .video-container video {
    width: 100%;
    height: auto;
    object-fit: contain;
    border-radius: 20px;
    will-change: transform;
  }


  /* Overlay pour l'image agrandie */
  .image-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.98);
    z-index: 1000;
    justify-content: center;
    align-items: center;
    padding: 40px;
  }

  .image-overlay.active {
    display: flex;
  }

  .overlay-content {
    display: flex;
    gap: 40px;
    max-width: 1400px;
    width: 100%;
    height: 90%;
    align-items: center;
  }

  .overlay-image-container {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
  }

    .overlay-image-container img,
