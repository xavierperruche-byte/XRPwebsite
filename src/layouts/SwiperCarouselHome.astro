    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    border-radius: 10px;
  }


  /* Masquer les contrôles vidéo au survol */
  video::-webkit-media-controls {
    display: none !important;
  }

  video::-webkit-media-controls-enclosure {
    display: none !important;
  }

  video::-webkit-media-controls-panel {
