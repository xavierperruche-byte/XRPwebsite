<script>
  import { register } from 'swiper/element/bundle';
  
  // Enregistre Swiper Element côté client
  register();

  // Configuration responsive via JavaScript après initialisation
  document.addEventListener('DOMContentLoaded', () => {
    const swiperEl = document.querySelector('.mySwiper');
    const prevBtn = document.querySelector('.custom-prev');
    const nextBtn = document.querySelector('.custom-next');
    const overlay = document.getElementById('imageOverlay');
    const overlayImage = document.getElementById('overlayImage');
    const overlayVideo = document.getElementById('overlayVideo');
    const overlayTitle = document.getElementById('overlayTitle');
    const overlayDescription = document.getElementById('overlayDescription');
    const overlayDetails = document.getElementById('overlayDetails');
    const closeBtn = document.getElementById('closeOverlay');
    
    // Gestion de la lecture automatique des vidéos dans le carousel
    const videoSlides = document.querySelectorAll('.slide-video');
    videoSlides.forEach(slide => {
      const video = slide.querySelector('video');
      if (video) {
        // Configuration pour une boucle fluide
        video.preload = 'auto';
        
        // Forcer le rechargement complet
        video.load();
        
        // Démarrer la lecture
        const playPromise = video.play();
        if (playPromise !== undefined) {
          playPromise.catch(e => console.log('Autoplay prevented:', e));
        }
        
        // Méthode alternative pour boucle fluide : revenir légèrement avant la fin
        video.addEventListener('timeupdate', function() {
          if (this.duration - this.currentTime < 0.1) {
            this.currentTime = 0;
          }
        });
      }
    });
    

    if (swiperEl) {
      // Gestion des boutons de navigation personnalisés
      if (prevBtn) {
        prevBtn.addEventListener('click', () => {
          swiperEl.swiper.slidePrev();
        });
      }
      
      if (nextBtn) {
        nextBtn.addEventListener('click', () => {
          swiperEl.swiper.slideNext();
        });
      }

      // Gestion du clic sur les images pour l'overlay
      const slideContents = document.querySelectorAll('.slide-content');
      slideContents.forEach(content => {
        content.addEventListener('click', () => {
          const imageSrc = content.getAttribute('data-image');
          const videoSrc = content.getAttribute('data-video');
          const title = content.getAttribute('data-title');
          const description = content.getAttribute('data-description');
          const details = content.getAttribute('data-details');
          
          if (overlay) {
            if (overlayTitle) overlayTitle.textContent = title || '';
            if (overlayDescription) overlayDescription.textContent = description || '';
            if (overlayDetails) overlayDetails.innerHTML = details || '<p>Aucun détail supplémentaire disponible.</p>';

                        
            // Si c'est une vidéo
            if (videoSrc && overlayVideo) {
              overlayImage.style.display = 'none';
              overlayVideo.style.display = 'block';
              overlayVideo.querySelector('source').src = videoSrc;
              overlayVideo.loop = true;
              overlayVideo.muted = true;
              overlayVideo.preload = 'auto';
              overlayVideo.load();
              
              // Méthode alternative pour boucle fluide
              overlayVideo.addEventListener('timeupdate', function() {
                if (this.duration - this.currentTime < 0.1) {
                  this.currentTime = 0;
                }
              });
              
              const playPromise = overlayVideo.play();
              if (playPromise !== undefined) {
                playPromise.catch(e => console.log('Video play error:', e));
              }
            } 
            // Si c'est une image
            else if (imageSrc && overlayImage) {
              overlayVideo.style.display = 'none';
              overlayImage.style.display = 'block';
              overlayImage.src = imageSrc;
            }
            
            overlay.classList.add('active');
          }
        });
      });

      // Fermer l'overlay
      if (closeBtn && overlay) {
        closeBtn.addEventListener('click', () => {
          overlay.classList.remove('active');
          if (overlayVideo) {
            overlayVideo.pause();
            overlayVideo.currentTime = 0;
          }

        });
        
        // Fermer en cliquant sur le fond
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) {
            overlay.classList.remove('active');
            if (overlayVideo) {
              overlayVideo.pause();
              overlayVideo.currentTime = 0;
            }

          }
        });
      }

      // Fermer avec la touche Echap
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && overlay) {
          overlay.classList.remove('active');
          if (overlayVideo) {
            overlayVideo.pause();
            overlayVideo.currentTime = 0;
          }

        }
      });

      const updateSlidesPerView = () => {
        const width = window.innerWidth;
        
        if (width < 640) {
          swiperEl.setAttribute('slides-per-view', '1');
          swiperEl.setAttribute('space-between', '10');
        } else if (width < 1024) {
          swiperEl.setAttribute('slides-per-view', '2');
          swiperEl.setAttribute('space-between', '15');
        } else if (width < 1280) {
          swiperEl.setAttribute('slides-per-view', '3');
          swiperEl.setAttribute('space-between', '20');
        } else {
          swiperEl.setAttribute('slides-per-view', '4');
          swiperEl.setAttribute('space-between', '20');
        }
      };
      
      updateSlidesPerView();
      window.addEventListener('resize', updateSlidesPerView);
    }
  });
</script>