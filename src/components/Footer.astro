  ---
  // Footer.astro - Footer pleine largeur
  interface Props {
    mottoLeft?: string;
    mottoRight?: string;
  }

  const { 
    mottoLeft = ' ',
    mottoRight = ' '
  } = Astro.props;
  ---

<footer class="full-width-footer">
  <div class="footer-container">
    <!-- Left Motto -->
    <div class="footer-motto left">
      <span class="motto-text">
        Business With Attitude<br/>Gen√®ve - Paris - Singapore
      </span>
    </div>

      <!-- Center Logo and Legal Link -->
      <div class="footer-center">
        <a href="/" class="footer-logo">
          <img src="/images/logo.svg" alt="Logo" class="logo-img" />
          <span class="logo-text">We-TheAgency</span>
        </a>
        <a href="/legal" class="legal-link">Terms & Conditions</a>
      </div>

    <!-- Right Motto with Instagram -->
    <div class="footer-motto right">
      <span class="motto-text">{mottoRight}</span>
      <a href="https://www.instagram.com/wta.wpp/" target="_blank" rel="noopener noreferrer" class="instagram-link" aria-label="Instagram">
        <svg class="instagram-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2C6.477 2 2 6.477 2 12C2 17.523 6.477 22 12 22C17.523 22 22 17.523 22 12C22 6.477 17.523 2 12 2ZM12 20C7.589 20 4 16.411 4 12C4 7.589 7.589 4 12 4C16.411 4 20 7.589 20 12C20 16.411 16.411 20 12 20Z" fill="currentColor"/>
          <path d="M12 7C9.243 7 7 9.243 7 12C7 14.757 9.243 17 12 17C14.757 17 17 14.757 17 12C17 9.243 14.757 7 12 7ZM12 15C10.346 15 9 13.654 9 12C9 10.346 10.346 9 12 9C13.654 9 15 10.346 15 12C15 13.654 13.654 15 12 15Z" fill="currentColor"/>
          <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/>
        </svg>
      </a>
    </div>
  </footer>

  <style>
    .full-width-footer {
      width: 100%;
      background: #ffffff;
      border-top: 0px solid rgba(0, 0, 0, 0.1);
      margin-top: 0rem;
    }

    .footer-container {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 2rem 2rem;
      max-width: 1800px;
      margin: 0 auto;
      position: relative;
      gap: 0rem;
    }

  /* Motto Sections */
  .footer-motto {
    flex: 1;
    display: flex;
    align-items: center;
    min-width: 200px;
    overflow: visible;
  }

  .footer-motto.left {
    justify-content: flex-start;
  }

  .footer-motto .motto-text {
    white-space: nowrap;
  }

    .footer-motto.right {
      justify-content: flex-end;
    }

    .motto-text {
      font-size: 0.9rem;
      font-weight: 500;
      color: #555;
      transition: color 0.3s ease;
      white-space: nowrap;
      line-height: 1.3;
      display: inline-block;
    }

    .full-width-footer:hover .motto-text {
      color: #000;
    }

    /* Center Section */
    .footer-center {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
    }

    .footer-logo {
      display: flex;
      align-items: center;
      text-decoration: none;
      color: #000;
      transition: transform 0.2s ease;
    }

    .footer-logo:hover {
      transform: scale(1.05);
    }

    .logo-img {
      height: 32px;
      width: auto;
      margin-right: 0.5rem;
    }

    .logo-text {
      background: linear-gradient(45deg, #000, #000);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      font-size: 15px;
      font-weight: 200;
      letter-spacing: 5px;
    }

    .legal-link {
      font-size: 0.75rem;
      color: #888;
      text-decoration: none;
      transition: all 0.3s ease;
      padding: 0.25rem 0.75rem;
      border-radius: 8px;
    }

    .legal-link:hover {
      color: #000;
      background: rgba(171, 171, 171, 0.2);
    }

  .instagram-float {
    top: 20px;
    right: 20px;
    z-index: 999;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .instagram-float:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.55);
    transform: translateY(-2px);
  }

  .instagram-link {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: #555;
    transition: all 0.3s ease;
    border-radius: 20px;
    gap: 0.75rem;
  }

  .instagram-link:hover {
    background: rgba(171, 171, 171, 0.3);
    color: #000000;
  }

  .instagram-link:active {
    background: linear-gradient(45deg, #857f74, #000000);
    color: white;
  }

  .instagram-icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .instagram-link:hover .instagram-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .instagram-text {
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap;
  }


    /* Responsive Design */
    @media (max-width: 1024px) {
      .footer-container {
        padding: 2rem 3rem;
        gap: 1rem;
      }

      .motto-text {
        font-size: 0.85rem;
      }

      .logo-text {
        font-size: 12px;
        letter-spacing: 3px;
      }
    }

    @media (max-width: 768px) {
    .instagram-icon {
      width: 20px;
      height: 20px;
    }

      .footer-container {
        flex-direction: column;
        padding: 1.5rem 2rem;
        gap: 0.75rem;
      }

      .footer-motto {
        width: 100%;
        justify-content: center !important;
        text-align: center;
      }

      .footer-center {
        order: -1;
      }

      .motto-text {
        font-size: 0.8rem;
      }
    }

    @media (max-width: 480px) {
      .footer-container {
        padding: 1rem 1.5rem;
      }

      .logo-text {
        display: none;
      }

      .logo-img {
        height: 24px;
      }

      .motto-text {
        font-size: 0.75rem;
      }

      .legal-link {
        font-size: 0.7rem;
      }
      .instagram-text {
        display: none;
      }

      .instagram-link {
        padding: 0.75rem;
      }
    }
  </style>