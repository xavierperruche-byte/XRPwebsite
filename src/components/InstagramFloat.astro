---
// InstagramFloat.astro - Floating Instagram link box
interface Props {
  instagramUrl?: string;
}

const { instagramUrl = 'https://instagram.com/yourhandle' } = Astro.props;
---

<div class="instagram-float">
  <a href={instagramUrl} target="_blank" rel="noopener noreferrer" class="instagram-link">
    <svg class="instagram-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M12 2C6.477 2 2 6.477 2 12C2 17.523 6.477 22 12 22C17.523 22 22 17.523 22 12C22 6.477 17.523 2 12 2ZM12 20C7.589 20 4 16.411 4 12C4 7.589 7.589 4 12 4C16.411 4 20 7.589 20 12C20 16.411 16.411 20 12 20Z" fill="currentColor"/>
      <path d="M12 7C9.243 7 7 9.243 7 12C7 14.757 9.243 17 12 17C14.757 17 17 14.757 17 12C17 9.243 14.757 7 12 7ZM12 15C10.346 15 9 13.654 9 12C9 10.346 10.346 9 12 9C13.654 9 15 10.346 15 12C15 13.654 13.654 15 12 15Z" fill="currentColor"/>
      <circle cx="17.5" cy="6.5" r="1.5" fill="currentColor"/>
    </svg>
    <span class="instagram-text">Follow Us</span>
  </a>
</div>

<style>
  .instagram-float {
    position: fixed;
    top: 20px;
    right: 20px;
    z-index: 999;
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    background: rgba(255, 255, 255, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  .instagram-float:hover {
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.55);
    transform: translateY(-2px);
  }

  .instagram-link {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    text-decoration: none;
    color: #555;
    transition: all 0.3s ease;
    border-radius: 20px;
    gap: 0.75rem;
  }

  .instagram-link:hover {
    background: rgba(171, 171, 171, 0.3);
    color: #000000;
  }

  .instagram-link:active {
    background: linear-gradient(45deg, #857f74, #000000);
    color: white;
  }

  .instagram-icon {
    width: 24px;
    height: 24px;
    transition: transform 0.3s ease;
  }

  .instagram-link:hover .instagram-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .instagram-text {
    font-weight: 500;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .instagram-float {
      top: 90px;
    }

    .instagram-link {
      padding: 0.75rem 1rem;
      gap: 0.5rem;
    }

    .instagram-text {
      font-size: 0.85rem;
    }

    .instagram-icon {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    .instagram-text {
      display: none;
    }

    .instagram-link {
      padding: 0.75rem;
    }
  }
</style>